/* pages/Template/sku.wxss */

/* 商品参数 */
image{
  width: 100%;
  height: 100%;
}
.sku{
  width: 100%;
  height: 100%;
  /* opacity: 0.6; */
  background-color: rgba(0, 0, 0, 0.7);
  position: fixed;
  top: 100%;
  left: 0;
  transition: all 0.6s;
  z-index: 1
}

.sku_content{
  width: 100%;
  height: 90%;
  background-color: rgba(255, 255, 255, 1);
  position: absolute;
  bottom: 0;
  z-index: 200
}
.scroll{
  top: 0%;
}
.s_content{
  width: 100%;
  height: auto;
  padding: 0 15rpx;
  box-sizing: border-box;

  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #000000;
  letter-spacing: 0;
  line-height: 13px;
}
.sku_top{
  width: 100%;
  height: 250rpx;
  border-bottom: 2rpx solid #e4e4e4;
  display: flex;
  display: -webkit-flex;
  /* justify-content: space-between */
}
.sku_pic{
  width: 214rpx;
  height: 214rpx;
  border: 1rpx solid #E4E4E4;
  border-radius: 8rpx;
  padding: 34rpx;
  box-sizing: border-box;
  margin-top: -30rpx;
  background: #fff
}
.sku_pickinfo{
  width: 50%;
  height: auto;
  margin-left: 25rpx;
  margin-top: 50rpx;
}
.sku_price{
  color: #FF4400;
  font-size: 32rpx;
}
.sku_kucun{
  margin: 20rpx 0;
}
.x{
  width: 48rpx;
  height: 48rpx;
  margin-top: 20rpx;
  margin-left: 58rpx;
}
.sku_color{
  width: 100%;
  height: 200rpx;
  border-bottom: 2rpx solid #e4e4e4;
  display: flex;
  display: -webkit-flex;
  flex-flow: column wrap;
  justify-content: space-around
}
.btn_group{
  width: 100%;
  height: auto;
   /* display: flex;
  display: -webkit-flex;
  flex-flow: row wrap  */
}
button{
  border: none;
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #333333;
  letter-spacing: 0;
}
button::after{
  border: none
}
.btn_color{
  width: auto;
  min-width: 80rpx;
  height: 52rpx;
  background: #EEEEEE;
  border-radius: 8rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  float: left
}
/* 按钮被选中 */
.btn_active{
  background: #FF6026;
  color: #fff;
}
/* 按钮不可用 */
.btn_dis{
  background: #F5F5F5;
  color: #999999;
}
.t-1,.t-2,.t-3{
  margin-right: 30rpx;
}
.t-1{
  margin-left: 50rpx;
}
/* 尺码 ,种类*/
.size,.type{
  width: 100%;
  height: auto;
  min-height: 200rpx;
  border-bottom: 2rpx solid #e4e4e4;
  display: flex;
  display: -webkit-flex;
  flex-flow: column wrap;
  justify-content: space-around
}
/* 购买量 */
.sku_count{
  width: 100%;
  height: 100rpx;
  border-bottom: 2rpx solid #e4e4e4;
  line-height: 100rpx;
  /* position: fixed;
  bottom: 110rpx;
  background-color: white; */
}
.shu{
  float: left;
}
.count{
  float: right;
  width: 192rpx;
  height: 54rpx;
  border:2rpx solid #e4e4e4;
  margin-top: 20rpx;
  box-sizing: border-box;display: flex;
  display: -webkit-flex;
  flex-flow: row nowrap;
  line-height: 54rpx
}
.count view{
  width: 33%;
  height: 100%;
  text-align: center;
}
.zi{
  border-left: 1rpx solid #e4e4e4;
  border-right: 1rpx solid #e4e4e4;
}
.jian{
  color: #e4e4e4
}
.submit{
  width: 100%;
  height: 96rpx;
  background: #FF6026;
  color: #fff;
  position: absolute;
  bottom: 0;
  border-radius: 0;
  margin: 0;
  line-height: 96rpx;
  font-size: 34rpx;
}