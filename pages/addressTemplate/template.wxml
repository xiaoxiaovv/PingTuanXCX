 
 <!-- 收件地址模板 -->

<template name='address'>
  <view class='address'>
     <view class='address-top'>
        <text>收货人：{{orderData.consignee}}</text>
        <text class='mobile'>{{orderData.mobile}}</text>
     </view>
     <view class='address-bottom'>
      <image src='../../../imgs/location@2x.png'  class='icon' />
      <view class='address-text'>
       <text style='width:170rpx;'>收货地址：</text>
       <text>{{orderData.regionName}} {{orderData.address}}</text>
      </view>
       <!-- <image src='../../../imgs/Clear@2x.png'  class='next' /> -->
     </view>
  </view>
</template>