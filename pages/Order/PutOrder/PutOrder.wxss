  text-align: justify;
}
.address-bg{
  height: 10rpx;
  z-index: 9999;
}
.address-bg-img{
  display: block;
  height: 10rpx;
  width: 100%;
}
.shop-info-txt{
  color: #000;
  font-size: 28rpx;
