.imgs-style{
  width: 48rpx;
  height: 48rpx;
  margin-left: 32rpx;
  margin-right: 16rpx;
}
::-webkit-scrollbar{
  display: none;
}
.content-box{
  background: #eee;
  display: flex;
  display: -webkit-box;
  display: -webkit-flex;
  flex-direction: column;
  position: fixed;
  height: 100%;
  width: 100%;
}
.shop-info{
  background: #fff;
  border-top: 1px solid #eee;
  font-size: 28rpx;
  padding-bottom: 20rpx;
  position: relative;
}
.address-more{
  position: absolute;
  right: 32rpx;
  top: 72rpx;
  width: 48rpx;
}

.address-container {
  padding-left: 88rpx;
  width: 560rpx;
}
.shop-info-msg {
  color: #000;
  line-height: 88rpx;
  width: 100%;
}
.shop-info-address{
  color: #333;
  line-height: 40rpx;
