<view class='v-input'>
  <view class='input-box'>
    <text class='text'>{{selectStateData.typeName}}ï¼š</text>
    <view class="phone_one" bindtap="clickPerson">
      <view class="phone_personal">{{selectStateData.firstPerson}}</view>
      <view class='text-xiala'>
